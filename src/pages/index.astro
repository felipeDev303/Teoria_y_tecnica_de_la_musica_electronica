---
const str = "Bob"
const num = 1
const obj = {
	name: str,
	number: num,
	favorites: ["astro", "css", "js"]
}
const isVisible = true;
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/Pure_Data_logo.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Pure Data</title>
	</head>
	<body>
		<h1>{str}</h1>
		<h2>{obj.favorites[2].toUpperCase()}</h2>
		{
			isVisible
			? <h2>{obj.favorites[1].toUpperCase()}</h2> // La logica dice que si isVisible es true, entonces se muestra este h2
			: <h2>{obj.favorites[0].toUpperCase()}</h2>	 // La logica dice que si isVisible es false, entonces se muestra este h2
		}
		<!-- <h1>Teoría y técnica de la música electrónica</h1>-->

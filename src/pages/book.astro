---
import BaseLayout from "@/layouts/BaseLayout.astro"
const { title, description } = Astro.props;
const bookList = await Astro.glob("../pages/book/*.md");
---
<html>

<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="public\Pure_Data_logo.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
</head>

<body>
	
    <BaseLayout title="Teoría y técnica de la música electrónica" description="Libro de Miller Puckette traducido al español por Felipe Morales">
        <div class="text-center max-w-4xl mx-auto p-8">
            <div class="my-8">
                <h1 class="text-7xl font-extrabold">Teoría y técnica de la música electrónica</h1>
            </div>
        </div>

        <div>
            <ul>
                {bookList.map((book) => (
                    <li>
                        <a href={book.url}>{book.frontmatter.title}</a>
                    </li>   
                ))}
        </div>
    </BaseLayout>
    
</body>

</html> 